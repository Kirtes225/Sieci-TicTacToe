<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="350.0" style="-fx-background-color: cornflowerblue;" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IPandPortController">
   <children>
      <Label alignment="CENTER" layoutX="10.0" layoutY="15.0" prefHeight="30.0" prefWidth="160.0" text="Create a server">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font></Label>
      <Label alignment="CENTER" layoutX="180.0" layoutY="15.0" prefHeight="30.0" prefWidth="160.0" text="Connect to the server">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font></Label>
      <Button fx:id="createServerButton" layoutX="10.0" layoutY="91.0" mnemonicParsing="false" onAction="#createServer" prefHeight="30.0" prefWidth="149.0" text="Create">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font></Button>
      <Button fx:id="connectServerButton" layoutX="186.0" layoutY="130.0" mnemonicParsing="false" onAction="#connectServer" prefHeight="30.0" prefWidth="149.0" text="Connect">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font></Button>
      <TextField fx:id="serverPortTextField" layoutX="10.0" layoutY="52.0" prefHeight="30.0" prefWidth="149.0" promptText="Set port" />
      <TextField fx:id="clientIPTextField" layoutX="186.0" layoutY="52.0" prefHeight="30.0" prefWidth="149.0" promptText="Set IP" />
      <TextField fx:id="clientPortTextField" layoutX="186.0" layoutY="91.0" prefHeight="30.0" prefWidth="149.0" promptText="Set port" />
      <Label fx:id="serverInfo" layoutX="11.0" layoutY="177.0" prefHeight="47.0" prefWidth="104.0" wrapText="true">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font>
      </Label>
      <Label fx:id="errorInfo" alignment="TOP_LEFT" layoutX="25.0" layoutY="227.0" prefHeight="69.0" prefWidth="300.0" textFill="RED" wrapText="true">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font>
      </Label>
      <Label fx:id="IPLabel" alignment="TOP_LEFT" layoutX="11.0" layoutY="130.0" prefHeight="47.0" prefWidth="138.0" wrapText="true">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
